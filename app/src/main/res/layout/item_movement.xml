<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imgMovements"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_movement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMovementName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tvBalance"
        app:layout_constraintStart_toEndOf="@+id/imgMovements"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Recibo Iberdrola Diciembre 2014" />

    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvMovementName"
        app:layout_constraintTop_toBottomOf="@+id/tvMovementName"
        tools:text="02-01-2015 Importe: -73.87" />

</androidx.constraintlayout.widget.ConstraintLayout>